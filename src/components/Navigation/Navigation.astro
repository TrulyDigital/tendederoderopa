        <img src={mobileButtonSrc} alt={mobileButtonAlt} />
      </button>
    </div>
  </div>

  <!-- SideNav -->
  <div id="idSideNav" class="_sidenav">
    <!-- SideNav Close -->
    <div class="_sidenav_close">
      <div>
        <button id="idCloseMenuMobile">
          <img src={mobileCloseButtonSrc} alt={mobileCloseButtonAlt}>
        </button>
      </div>
    </div>
    <!-- SideNav Menu -->
    <ul class="_sidenav_menu">
      {
        nav.menu.map((menuItem, index) => (
          // SideNav Menu Item
          <li class="_sidenav_menu_item">
            <button id={`idSideNavSubMenuButton${index}`}>
              <span>
                {menuItem.text}
              </span>
              <img src={arrowDownSrc} alt={arrowDownAlt} />
            </button>
            {/* SideNav Sub Menu Box */}
            <div id={`idSideNavSubMenuBox${index}`} class="_sidenav_sub_menu_box">
              <ul>
                {
                  menuItem.subMenuItem.map(subMenuItem => (
                    // SideNav Sub Menu Item
                    <li class="_sidenav_sub_menu_item">
                      <a href={subMenuItem.href}>
                        <img src={subMenuItem.iconSrc} alt={subMenuItem.iconAlt} />
                        <span>
                          <span>
